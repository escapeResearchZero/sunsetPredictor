---
import Layout from "../layouts/Layout.astro";
import SunsetPredictor from "../components/SunsetPredictor.tsx";
---
<Layout title="Sunset Predictor">
  <div class="mx-auto max-w-screen-2xl px-4 py-8 space-y-6">
    <section class="prose max-w-none">
      <h1 class="text-2xl font-semibold">日落火烧云预测</h1>
      <p class="text-gray-600">选择你的位置与日期以查看预测。</p>
    </section>

    <!-- 预测组件回来了 -->
    <SunsetPredictor client:load />

    <!-- 跳转到打分说明 -->
    <div class="flex justify-center">
      <a
        href="scoring"
        class="inline-flex items-center gap-2 rounded-lg border px-4 py-2 hover:border-orange-500 hover:text-orange-600"
      >
        了解打分系统 / Learn Scoring System
      </a>
    </div>
  </div>
</Layout>

